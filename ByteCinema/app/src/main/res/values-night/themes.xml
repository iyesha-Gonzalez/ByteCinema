<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ByteCinema" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFF500</item>
        <item name="colorPrimaryVariant">#C4C4C4</item>
        <item name="colorOnPrimary">#FFFFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#00E0FF</item>
        <item name="colorOnSecondary">#FF000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.ByteCinema.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.ByteCinema.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.ByteCinema.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
